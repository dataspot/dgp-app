{
  "name": "ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "i18n": "ng extract-i18n --output-path ./projects/ui/src/locales && tx push --source && tx pull --mode sourceastranslation -l he,en",
    "package": "ng build ui --configuration production",
    "build_lib": "ng build etl-server --configuration production",
    "watch_lib": "ng build etl-server --watch",
    "copy-license": "cp ../LICENSE ./dist/etl-server",
    "copy-readme": "cp ../README.md ./dist/etl-server",
    "copy-locales": "cp -r ./projects/ui/src/locales ./dist/etl-server",
    "copy-files": "npm run copy-license && npm run copy-readme && npm run copy-locales",
    "npm_pack": "cd dist/etl-server && npm pack",
    "package_lib": "npm run build_lib && npm run copy-files",
    "publish_lib": "npm run package_lib && cd dist/etl-server && npm publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.6",
    "@angular/common": "^16.2.6",
    "@angular/compiler": "^16.2.6",
    "@angular/core": "^16.2.6",
    "@angular/forms": "^16.2.6",
    "@angular/platform-browser": "^16.2.6",
    "@angular/platform-browser-dynamic": "^16.2.6",
    "@angular/router": "^16.2.6",
    "dayjs": "^1.11.10",
    "dgp-oauth2-ng": "^3.1.0",
    "ng-event-source": "^1.0.14",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.3",
    "@angular/cli": "~16.2.3",
    "@angular/compiler-cli": "^16.2.6",
    "@angular/localize": "^16.2.6",
    "@types/jasmine": "~4.0.0",
    "jasmine-core": "~4.1.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^16.2.3",
    "typescript": "~4.9.5"
  }
}
